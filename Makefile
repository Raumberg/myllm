## ---------------------------------------------------------------------------
## Setup
## ---------------------------------------------------------------------------
.PHONY: install-dev
install-dev:
	$(UV) pip install -r requirements-dev.txt -e .

## ---------------------------------------------------------------------------
## Lint & formatting
## ---------------------------------------------------------------------------
.PHONY: lint
lint:
	ruff check myllm -q

.PHONY: fmt
fmt:
	black myllm

## ---------------------------------------------------------------------------
## Tests
## ---------------------------------------------------------------------------
.PHONY: test
test:
	pytest -q

## ---------------------------------------------------------------------------
## Full CI run (lint + tests)
## ---------------------------------------------------------------------------
.PHONY: ci
ci: lint test 